<ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:focusable="false">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context=".MainActivity"
                    android:background="#ffffff">

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAlignment="center"
                    android:paddingBottom="50dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LECTURA FUERA DE RUTA"
                        android:id="@+id/textView16"
                        android:textColor="#ff1a33"
                        android:textStyle="bold|italic"
                        android:typeface="serif"
                        android:textSize="25dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="100dp"
                        android:layout_weight="1"/>

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/lecturas3"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"/>

            </TableRow>


            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tipo  Medidor:"
                        android:id="@+id/tvtipo"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ettipo"
                        android:layout_weight="1"
                        android:autoText="true"
                        android:enabled="true"
                        android:editable="false"
                        android:textColor="#2d1bff"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:inputType="text"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nro. Medidor:"
                        android:id="@+id/tvnro"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etnro"
                        android:layout_weight="1"
                        android:autoText="true"
                        android:enabled="true"
                        android:editable="false"
                        android:textColor="#2d1bff"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:inputType="number"/>

            </TableRow>
            ///
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calle:"
                        android:id="@+id/tvcalle"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etcalle"
                        android:layout_weight="1"
                        android:autoText="true"
                        android:enabled="true"
                        android:editable="false"
                        android:textColor="#2d1bff"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:inputType="text"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Altura:"
                        android:id="@+id/tvaltura"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="50dp"
                        android:textStyle="bold"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etaltura"
                        android:layout_weight="1"
                        android:autoText="true"
                        android:enabled="true"
                        android:editable="false"
                        android:textColor="#2d1bff"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:inputType="number"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/tableRow3"
                    android:showDividers="beginning|none|middle|end"
                    android:paddingBottom="2dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cod. Observacion:"
                        android:id="@+id/textView7"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="false"
                        android:textStyle="bold"
                        android:paddingBottom="50dp"/>

                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/fcomboobs"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Lectura:"
                        android:id="@+id/tvlectura"
                        android:layout_weight="1"
                        android:typeface="monospace"
                        android:textSize="30dp"
                        android:textIsSelectable="true"
                        android:paddingBottom="100dp"
                        android:textStyle="bold"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etlectura"
                        android:layout_weight="1"
                        android:autoText="true"
                        android:enabled="true"
                        android:editable="false"
                        android:textColor="#2d1bff"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:inputType="number"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="100dp">

                <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="VOLVER"
                        android:id="@+id/button"
                        android:onClick="fmenu"
                        android:layout_weight="1"
                        android:textSize="40dp"
                        android:visibility="visible"/>

                <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="GUARDAR"
                        android:id="@+id/button2"
                        android:layout_weight="1"
                        android:onClick="fguarda"
                        android:textSize="40dp"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>
</ScrollView>