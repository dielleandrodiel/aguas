<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >


    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="6dp"
                android:layout_y="8dp"
                android:text="Envio de Datos al servidor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                />

        <TextView
                android:id="@+id/tvenviar"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_x="34dp"
                android:layout_y="90dp"
                android:gravity="fill_horizontal"
                android:text="Espere..."
                android:textSize="15dp"
                android:paddingBottom="100dp"
                android:visibility="visible"
                android:textStyle="bold|italic"
                android:textColor="#5b36ff"
                android:autoText="false"
                android:focusableInTouchMode="false"/>

        <CheckBox
                android:id="@+id/pede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_x="27dp"
                android:layout_y="203dp"
                android:editable="false"
                android:text="MEDICIONES ENVIADAS"
                android:textSize="15dp"
                android:checked="false"
                />

        <CheckBox
                android:id="@+id/nopedenv"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_x="25dp"
                android:layout_y="276dp"
                android:editable="false"
                android:text="MEDICIONES FUERA DE RUTA ENVIADAS"
                android:textSize="15dp"
                android:checked="false"
                />

        <Button
                android:id="@+id/venviar"
                android:layout_width="595dp"
                android:layout_height="90dp"
                android:layout_x="0dp"
                android:layout_y="398dp"
                android:onClick="vuelve"
                android:text="VOLVER"
                android:textStyle="bold"
                android:textSize="25dp"/>
    </TableLayout>

</AbsoluteLayout>