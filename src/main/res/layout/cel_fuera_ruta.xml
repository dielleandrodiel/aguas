<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:text="MEDIDOR FUERA DE RUTA"
              android:textSize="20dp" android:textColor="#010001"
              android:paddingBottom="20dp"
              android:textStyle="bold|italic"/>
    <!-- inicia el ScrollView -->
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <!-- se colocal el LinearLayout que contendra el formulario -->
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
            <TextView android:text="TIPO MEDIDOR" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText  android:id="@+id/ettipo"
                       android:inputType="text" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <TextView android:text="NUMERO DE MEDIDOR" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText    android:id="@+id/etnro"
                         android:inputType="number"  android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <TextView android:text="CALLE" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText  android:id="@+id/etcalle"
                       android:inputType="text" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

            <TextView android:text="ALTURA" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText  android:id="@+id/etaltura"
                       android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

            <TextView android:text="OBSERVACION" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
             <Spinner

                    android:id="@+id/fcomboobs"
                    android:spinnerMode="dialog" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:paddingBottom="15dp"/>

            <TextView android:text="LECTURA" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText  android:id="@+id/etlectura"
                       android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content"
                       android:paddingBottom="15dp"/>



            <Button

                    android:text="GUARDAR"
                    android:id="@+id/button2"
                    android:onClick="fguarda"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    />
            <Button

                    android:text="VOLVER"
                    android:id="@+id/button"
                    android:onClick="fmenu"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    />

        </LinearLayout>
    </ScrollView>
</LinearLayout>