<ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:focusable="false"
        android:background="#ffffff">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
        >

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center">

        </TableRow>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/baner"
                android:drawableTop="@drawable/blecturas"
                android:ellipsize="none"
                android:background="@android:color/transparent"
                android:textColor="#3e20ff"
                />

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nro Secuencia:"
                    android:id="@+id/textView"
                    android:layout_weight="3"
                    android:typeface="monospace"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:paddingTop="10dp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:editable="false"
                    android:textColor="#2d1bff"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:paddingRight="20dp"/>

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUSCAR OTRO..."
                    android:id="@+id/button3"
                    android:width="120dp"
                    android:height="25dp"
                    android:textColor="#010001"
                    android:onClick="otro"
                    android:layout_weight="3"
                    android:textStyle="bold|italic"/>

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUERA DE RUTA..."
                    android:id="@+id/button4"
                    android:onClick="fuera"
                    android:textColor="#010101"
                    android:layout_weight="1"
                    android:textStyle="bold|italic"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tipo y Nro. Medidor:"
                    android:id="@+id/textView2"
                    android:layout_weight="2"
                    android:typeface="monospace"
                    android:textSize="20dp"
                    android:textIsSelectable="true"
                    android:paddingBottom="5dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_weight="2"
                    android:autoText="true"
                    android:enabled="false"
                    android:editable="false"
                    android:textColor="#2d1bff"
                    android:textStyle="bold"
                    android:clickable="false"/>

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUSCAR"
                    android:id="@+id/button5"
                    android:layout_weight="0"
                    android:width="10dp"
                    android:visibility="visible"
                    android:onClick="busca"/>

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCELAR"
                    android:id="@+id/button6"
                    android:onClick="cancelab"
                    android:visibility="visible"
                    android:layout_weight="0"
                    />

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Domicilio:"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:editable="false"
                    android:textColor="#2d1bff"
                    android:textStyle="bold"
                    android:clickable="false"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ubicación:"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:editable="false"
                    android:textColor="#2d1bff"
                    android:textStyle="bold"
                    android:clickable="false"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Observaciones:"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"
                    android:layout_weight="1"
                    android:maxLength="250"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow2"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Lectura:"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText6"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow3"
                android:showDividers="beginning|none|middle|end"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cod. Observacion:"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow4"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Obs. Adicionales:"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText8"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow5"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cantidad de Dígitos:"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:layout_gravity="top"
                    android:textSize="20dp"
                    android:textIsSelectable="true"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText9"
                    android:layout_weight="1"
                    android:numeric="integer"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow6"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cod. Ubicación:"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"
                    android:singleLine="true"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow7"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tipo de llave:"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner3"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow8"
                android:paddingBottom="15dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Riesgo de acceso:"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner4"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                >

            <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Mediciones guardadas/totales"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:typeface="sans"
                    android:textColor="#1a35ff"
                    android:layout_gravity="center"
                    android:textIsSelectable="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="999/999"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textColor="#31ff13"
                    android:visibility="visible"
                    />

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/tvr"
                    android:layout_weight="1"
                    android:textColor="#ff0f31"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:visibility="visible"
                    android:text="Mediciones restantes"
                    android:paddingRight="20dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:id="@+id/textView13"
                    android:textColor="#ff0f31"
                    android:textSize="20dp"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp"
                android:paddingTop="30dp">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MENU"
                    android:id="@+id/button"
                    android:onClick="irmenu"
                    android:layout_weight="1"
                    android:textSize="40dp"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:onClick="guarda_mediciones"
                    android:textSize="40dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
</ScrollView>