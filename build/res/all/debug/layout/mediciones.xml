<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
        >

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="36dp">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/baner"
                android:drawableTop="@drawable/blecturas"
                android:ellipsize="none"
                android:background="@android:color/transparent"
                android:textColor="#3e20ff"
                />

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nro Secuencia:"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="true"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tipo y Nro. Medidor:"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="20dp"
                    android:textIsSelectable="true"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Domicilio:"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ubicación:"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Observaciones:"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow2">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Lectura:"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText6"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow3"
                android:showDividers="beginning|none|middle|end">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cod. Observacion:"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow4">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Obs. Adicionales:"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText8"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow5">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cantidad de Dígitos:"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:layout_gravity="top"
                    android:textSize="20dp"
                    android:textIsSelectable="true"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText9"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow6">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cod. Ubicación:"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"
                    android:singleLine="true"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow7">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tipo de llave:"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner3"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow8">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Riesgo de acceso:"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:textSize="25dp"
                    android:textIsSelectable="false"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner4"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medidiones guardadas/totales:"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:typeface="sans"
                    android:textColor="#1a35ff"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1/50"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textColor="#31ff13"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MENU"
                    android:id="@+id/button"
                    android:onClick="irmenu"
                    android:layout_weight="1"
                    />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    />
        </TableRow>

    </TableLayout>

</RelativeLayout>
</ScrollView>